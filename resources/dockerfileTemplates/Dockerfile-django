# ============================
# Builder stage
# ============================
FROM python:3.11.7-alpine3.19 AS builder

# Set working directory
WORKDIR /app

# Install build dependencies
RUN apk add --no-cache \
    gcc \
    musl-dev \
    postgresql-dev \
    python3-dev \
    libffi-dev

# Copy requirements
COPY requirements.txt ./

# Install Python dependencies
RUN pip install --no-cache-dir --user -r requirements.txt

# ============================
# Production stage
# ============================
FROM python:3.11.7-alpine3.19

# Set working directory
WORKDIR /app

# Install runtime dependencies
RUN apk add --no-cache \
    postgresql-libs \
    wget

# Create non-root user
RUN addgroup -g 1001 -S django && \
    adduser -S django -u 1001 -G django

# Copy Python dependencies from builder
COPY --from=builder --chown=django:django /root/.local /home/django/.local

# Copy application code
COPY --chown=django:django . .

# Create necessary directories
RUN mkdir -p /app/staticfiles /app/media && \
    chown -R django:django /app/staticfiles /app/media

# Update PATH to use user's local packages
ENV PATH=/home/django/.local/bin:$PATH

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV PORT=8000

# Create healthcheck script
RUN echo '#!/bin/sh' > /app/healthcheck.sh && \
    echo 'wget --no-verbose --tries=1 --spider --timeout=2 "http://localhost:${PORT:-8000}${HEALTH_ENDPOINT:-/health}" 2>&1' >> /app/healthcheck.sh && \
    echo 'exit $?' >> /app/healthcheck.sh && \
    chmod +x /app/healthcheck.sh && \
    chown django:django /app/healthcheck.sh

# Switch to non-root user
USER django

# Collect static files (run during build)
RUN python manage.py collectstatic --noinput || echo "Collectstatic skipped"

# Expose port
EXPOSE 8000

# Add healthcheck
HEALTHCHECK --interval=30s --timeout=3s --start-period=30s --retries=3 \
    CMD /app/healthcheck.sh || exit 1

# Add labels for metadata
LABEL maintainer="cloudinator" \
      description="Django application" \
      version="1.0"

# Run with Gunicorn
CMD ["gunicorn", "--bind", "0.0.0.0:8000", "--workers", "3", "--timeout", "60", "wsgi:application"]
