# Build stage
FROM node:18.19.0-alpine3.19 AS builder
WORKDIR /app
COPY package*.json ./

# Install dependencies
RUN {{packageManager}} install

# Copy all source files
COPY . .

# Run build
RUN {{packageManager}} run build

# Check the actual build output structure
RUN ls -la dist/ && \
    echo "Build output structure:" && \
    find dist/ -type f

# Update package.json with correct path based on build output
RUN node -e "\
    const fs = require('fs'); \
    const pkg = require('./package.json'); \
    let serverPath = ''; \
    if (fs.existsSync('./dist/server/main.server.mjs')) { \
        serverPath = 'dist/server/main.server.mjs'; \
    } else if (fs.existsSync('./dist/angular/server/server.mjs')) { \
        serverPath = 'dist/angular/server/server.mjs'; \
    } else { \
        const files = fs.readdirSync('./dist'); \
        console.log('Available files in dist:', files); \
        throw new Error('Server file not found in expected locations'); \
    } \
    pkg.scripts['serve:ssr'] = 'node ' + serverPath; \
    fs.writeFileSync('package.json', JSON.stringify(pkg, null, 2)); \
    console.log('Updated serve:ssr script to use:', serverPath);"

# Production stage
FROM node:18.19.0-alpine3.19
WORKDIR /app

# Copy package.json and build output
COPY --from=builder /app/package*.json ./
COPY --from=builder /app/dist ./dist

# Install production dependencies
RUN npm install --production && \
    npm install express

# Create non-root user
RUN addgroup -g 1001 -S angular && \
    adduser -S angular -u 1001 && \
    chown -R angular:angular /app

# Create inline healthcheck script
RUN echo 'const http = require("http"); \
const options = { host: "localhost", port: process.env.PORT || 4200, path: "/", timeout: 2000 }; \
http.request(options, (res) => { process.exit(res.statusCode === 200 ? 0 : 1); }) \
.on("error", () => { process.exit(1); }).end();' > /app/healthcheck.js && \
    chown angular:angular /app/healthcheck.js

# Switch to non-root user
USER angular

# Set environment variables
ENV PORT=4200 NODE_ENV=production

# Expose port
EXPOSE 4200

# Add healthcheck
HEALTHCHECK --interval=30s --timeout=3s --start-period=15s --retries=3 \
    CMD node /app/healthcheck.js || exit 1

# Add labels for metadata
LABEL maintainer="cloudinator" \
      description="Angular SSR application" \
      version="1.0"

CMD ["npm", "run", "serve:ssr"]
