# Stage 1: Build the application
FROM php:8.2.14-cli-alpine3.19 AS builder

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apk add --no-cache \
    git \
    unzip \
    libzip-dev

# Install PHP extensions
RUN docker-php-ext-install \
    pdo_mysql \
    exif \
    pcntl \
    bcmath \
    zip

# Install composer with pinned version
COPY --from=composer:2.6.6 /usr/bin/composer /usr/bin/composer

# Copy composer files
COPY composer.json composer.lock ./

# Install dependencies
RUN composer install --no-dev --no-scripts --no-autoloader --no-interaction

# Copy application files
COPY . .

# Set proper permissions
RUN chown -R www-data:www-data /app && \
    chmod -R 755 /app/storage

# Generate optimized autoloader and run post-install scripts
RUN composer install --no-dev --optimize-autoloader --no-interaction

# Laravel optimization
RUN php artisan key:generate --force && \
    php artisan config:cache && \
    php artisan route:cache && \
    php artisan view:cache && \
    php artisan optimize

# Stage 2: Create production image
FROM php:8.2.14-cli-alpine3.19

# Install system dependencies and extensions
RUN apk add --no-cache \
    libzip-dev \
    netcat-openbsd && \
    docker-php-ext-install \
        pdo_mysql \
        exif \
        pcntl \
        bcmath \
        zip

# Set working directory
WORKDIR /app

# Copy application from builder
COPY --from=builder --chown=www-data:www-data /app .

# Set environment variables
ENV APP_ENV=production
ENV APP_DEBUG=false
ENV PORT=8000

# Create system user
RUN addgroup -g 1001 -S laravel && \
    adduser -S laravel -u 1001 -G laravel

# Set proper permissions
RUN chown -R laravel:laravel /app && \
    chmod -R 755 /app/storage

# Create healthcheck script
RUN echo '#!/bin/sh' > /app/healthcheck.sh && \
    echo 'nc -z localhost ${PORT:-8000}' >> /app/healthcheck.sh && \
    echo 'exit $?' >> /app/healthcheck.sh && \
    chmod +x /app/healthcheck.sh && \
    chown laravel:laravel /app/healthcheck.sh

# Switch to non-root user
USER laravel

# Expose port
EXPOSE 8000

# Add healthcheck
HEALTHCHECK --interval=30s --timeout=3s --start-period=20s --retries=3 \
    CMD /app/healthcheck.sh || exit 1

# Add labels for metadata
LABEL maintainer="cloudinator" \
      description="Laravel application" \
      version="1.0"

# Start application
CMD ["php", "artisan", "serve", "--host=0.0.0.0", "--port=8000"]